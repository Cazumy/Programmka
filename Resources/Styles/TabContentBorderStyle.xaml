<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TabContentBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="6,0,6,0" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="BorderBrush" Value="#10100E" />
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/Programmka;component/Resources/Images/background.png" RenderOptions.BitmapScalingMode="HighQuality" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>