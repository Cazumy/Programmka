<Window
    x:Class="Programmka.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:styles="clr-namespace:Programmka.Resources.Styles"
    Title="Programmka"
    Width="1100"
    Height="680"
    MinWidth="1100"
    MinHeight="680"
    Background="#01FFFFFF"
    MouseLeftButtonDown="DragWindow"
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding MainWindowClosingCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding MainWindowLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        AutoReverse="False"
                        Storyboard.TargetProperty="(Window.Opacity)"
                        From="0.0"
                        To="1.0"
                        Duration="0:0:.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Window.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Roboto" />
        </Style>
        <styles:BoolToVisibilityInverseConverter x:Key="BoolToVisInverse" />
    </Window.Resources>
    <Grid>
        <Border
            x:Name="CloseButton"
            Width="44"
            Height="38"
            Margin="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="2"
            shell:WindowChrome.IsHitTestVisibleInChrome="True"
            Cursor="Hand"
            PreviewMouseLeftButtonDown="CloseWindow">
            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation
                                Storyboard.TargetName="CloseText"
                                Storyboard.TargetProperty="Foreground.Color"
                                To="#626255"
                                Duration="0:0:0.085" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation
                                Storyboard.TargetName="CloseText"
                                Storyboard.TargetProperty="Foreground.Color"
                                To="#C6C6BD"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
            <TextBlock
                x:Name="CloseText"
                Width="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                Foreground="#C6C6BD"
                Text="X"
                TextAlignment="Center" />
        </Border>
        <Border
            BorderBrush="#10100E"
            BorderThickness="4"
            CornerRadius="10">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Offset="1" Color="#2B2B26" />
                    <GradientStop Offset="0" Color="#FF61615F" />
                </RadialGradientBrush>
            </Border.Background>
            <Grid>
                <Border
                    Height="38"
                    VerticalAlignment="Top"
                    Background="#FF1B1B18"
                    CornerRadius="6 6 0 0">
                    <Grid>
                        <TextBlock
                            Width="150px"
                            Margin="12,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Foreground="White"
                            Text="Programmka 1.0.4" />
                        <Button
                            Width="260"
                            Command="{Binding UpdateAppCommand}"
                            Content="Доступно обновление. Установить"
                            Cursor="Hand"
                            Visibility="{Binding UpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Grid>
                </Border>
                <Grid
                    Height="64"
                    Margin="0,38,0,0"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="410" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="64" />
                        <ColumnDefinition Width="64" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="TabItemDescription"
                        Grid.Column="1"
                        Height="38"
                        Margin="0,10,0,0"
                        FontSize="18"
                        Foreground="White"
                        Text="{Binding TabItemDescription, Mode=OneWay, NotifyOnTargetUpdated=True}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <hc:LoadingCircle
                        x:Name="LoadingCircleObject"
                        Grid.Column="2"
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsRunning="True"
                        Visibility="{Binding LoadingStatus, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Image
                        Grid.Column="3"
                        Margin="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/Programmka;component/Resources/Images/win10.png" />
                </Grid>
                <TabControl
                    Margin="16,38,16,0"
                    Background="Transparent"
                    BorderThickness="0"
                    TabStripPlacement="Top">
                    <TabItem x:Name="BaseTweaksItem" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/home.png">
                        <StackPanel
                            Margin="0,0,40,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <Grid Margin="0,0,0,8">
                                <ContentControl
                                    styles:TextProperties.StatusText="{Binding ExeNotifications.StatusText}"
                                    Content="UAC уведомления"
                                    Style="{StaticResource ToggleButtonBackgroundStyle}"
                                    Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/exe-notifications.png" />
                                <ToggleButton IsChecked="{Binding ExeNotifications.IsChecked}" />
                            </Grid>
                            <Grid Margin="0,0,0,8">
                                <ContentControl
                                    styles:TextProperties.StatusText="{Binding Hibernation.StatusText}"
                                    Content="Гибернация"
                                    Style="{StaticResource ToggleButtonBackgroundStyle}"
                                    Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/hibernation.png" />
                                <ToggleButton IsChecked="{Binding Hibernation.IsChecked}" />
                            </Grid>
                            <Grid Margin="0,0,0,8">
                                <ContentControl
                                    styles:TextProperties.StatusText="{Binding MouseAcceleration.StatusText}"
                                    Content="Акселерация мыши"
                                    Style="{StaticResource ToggleButtonBackgroundStyle}"
                                    Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/mouse-acceleration.png" />
                                <ToggleButton IsChecked="{Binding MouseAcceleration.IsChecked}" />
                            </Grid>
                            <Grid Margin="0,0,0,8">
                                <ContentControl
                                    styles:TextProperties.StatusText="{Binding KeySticking.StatusText}"
                                    Content="Залипание клавиш"
                                    Style="{StaticResource ToggleButtonBackgroundStyle}"
                                    Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/key-sticking.png" />
                                <ToggleButton IsChecked="{Binding KeySticking.IsChecked}" />
                            </Grid>
                            <Grid>
                                <ContentControl
                                    styles:TextProperties.StatusText="{Binding StartupDelay.StatusText}"
                                    Content="Ускорить запуск Windows"
                                    Style="{StaticResource ToggleButtonBackgroundStyle}"
                                    Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/startup-delay.png" />
                                <ToggleButton IsChecked="{Binding StartupDelay.IsChecked}" />
                            </Grid>
                        </StackPanel>
                    </TabItem>
                    <TabItem x:Name="FileExplorerItem" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/file-explorer.png">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>
                            <Grid
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                ClipToBounds="True">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.31*" />
                                    <RowDefinition Height="8*" />
                                    <RowDefinition Height=".5*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.RowSpan="3" Grid.ColumnSpan="2">
                                    <Image Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/explorer-no-ex.png" Stretch="Uniform" />
                                    <Image
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/explorer-ex.png"
                                        Stretch="Uniform"
                                        Visibility="{Binding FileExtensions.IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </Grid>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Top">
                                    <Image
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/quick-access.png"
                                        Stretch="Uniform"
                                        Visibility="{Binding QuickAccess.IsChecked, Converter={StaticResource BoolToVisInverse}}" />
                                    <Image Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/head.png" Stretch="Uniform" />
                                    <Image
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/3d-objects.png"
                                        Stretch="Uniform"
                                        Visibility="{Binding Objects3D.IsChecked, Converter={StaticResource BoolToVisInverse}}" />
                                    <Image Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/bottom.png" Stretch="Uniform" />
                                    <Image
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/disk-duplicate.png"
                                        Stretch="Uniform"
                                        Visibility="{Binding DiskDuplicate.IsChecked, Converter={StaticResource BoolToVisInverse}}" />
                                    <Image
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Showcase/network-icon.png"
                                        Stretch="Uniform"
                                        Visibility="{Binding NetworkIcon.IsChecked, Converter={StaticResource BoolToVisInverse}}" />
                                </StackPanel>
                            </Grid>

                            <StackPanel
                                Grid.Column="1"
                                Margin="20,0,20,0"
                                VerticalAlignment="Center">
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding DiskDuplicate.StatusText}"
                                        Content="Дубликаты дисков"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/disk.png" />
                                    <ToggleButton IsChecked="{Binding DiskDuplicate.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding QuickAccess.StatusText}"
                                        Content="Пункт &quot;Быстрый доступ&quot;"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/quick-access.png" />
                                    <ToggleButton IsChecked="{Binding QuickAccess.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding Objects3D.StatusText}"
                                        Content="Папка &quot;Объёмные объекты&quot;"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/3d-objects.png" />
                                    <ToggleButton IsChecked="{Binding Objects3D.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding NetworkIcon.StatusText}"
                                        Content="Значок &quot;Сеть&quot;"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/network.png" />
                                    <ToggleButton IsChecked="{Binding NetworkIcon.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding FileExtensions.StatusText}"
                                        Content="Расширения файлов"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/file-extensions.png" />
                                    <ToggleButton IsChecked="{Binding FileExtensions.IsChecked}" />
                                </Grid>
                                <Button Command="{Binding ReloadExplorerCommand}" Content="Перезагрузить проводник" />
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="DesktopItem" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/desktop.png">
                        <StackPanel Orientation="Horizontal">
                            <Border
                                x:Name="DesktopShowcase"
                                Width="590"
                                Margin="10,0,30,0"
                                VerticalAlignment="Center"
                                BorderBrush="#14110c"
                                BorderThickness="2">
                                <Grid Height="332">
                                    <Grid.Background>
                                        <ImageBrush ImageSource="{Binding WallpaperImageSource}" Stretch="UniformToFill" />
                                    </Grid.Background>
                                    <Border
                                        x:Name="HighlightColorImage"
                                        Width="200"
                                        Height="100"
                                        Margin="0,0,60,0"
                                        HorizontalAlignment="Right"
                                        Background="{Binding BackgroundBrush}"
                                        BorderBrush="{Binding BorderBrush}"
                                        BorderThickness="1"
                                        Cursor="" />
                                    <Image
                                        Width="30"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Icons/msedge.png" />
                                    <Image
                                        Width="10"
                                        Margin="10,26,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Source="pack://application:,,,/Programmka;component/Resources/Images/Icons/label-arrow.png"
                                        Visibility="{Binding LabelArrows.IsChecked, Converter={StaticResource BoolToVisInverse}}" />
                                </Grid>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding LabelArrows.StatusText}"
                                        Content="Стрелки на ярлыках"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/label.png" />
                                    <ToggleButton IsChecked="{Binding LabelArrows.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding WallpaperCompression.StatusText}"
                                        Content="Сжатие обоев рабочего стола"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/wallpaper-compression.png" />
                                    <ToggleButton IsChecked="{Binding WallpaperCompression.IsChecked}" />
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <ContentControl
                                        styles:TextProperties.StatusText="{Binding NewsWidget.StatusText}"
                                        Content="Виджет новости и интересы"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}"
                                        Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/wallpaper-compression.png" />
                                    <ToggleButton IsChecked="{Binding NewsWidget.IsChecked}" />
                                </Grid>
                                <Grid Height="232" Margin="0,0,0,10">
                                    <hc:ColorPicker x:Name="ColorPicker" SelectedBrush="{Binding SelectedBrush, Mode=TwoWay}" />
                                    <Border
                                        Width="148"
                                        Height="20"
                                        Margin="0,0,80,58"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Background="White" />
                                </Grid>
                                <Button
                                    Width="200"
                                    Height="30"
                                    Margin="0,0,0,10"
                                    Command="{Binding ChangeHighlightColorCommand}"
                                    CommandParameter="{Binding SelectedBrush, ElementName=ColorPicker}"
                                    Content="Поменять цвет выделения" />
                            </StackPanel>
                        </StackPanel>
                    </TabItem>
                    <TabItem x:Name="ActivationItem" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/activation.png">
                        <StackPanel Margin="30,30,500,200">
                            <Button
                                Margin="0,0,0,20"
                                Command="{Binding ActivateWindowsCommand}"
                                Content="Запустить скрипт активации Windows\Office" />
                            <Button
                                Margin="0,0,0,20"
                                Command="{Binding ActivateWinRarCommand}"
                                Content="Активировать WinRar" />
                            <Button Command="{Binding BecameAdminWin10Command}" Content="Сделать текущего пользователя администратором" />
                        </StackPanel>
                    </TabItem>
                    <TabItem x:Name="FixesItem" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/fix.png">
                        <Grid>
                            <StackPanel
                                MinWidth="480"
                                MaxWidth="480"
                                Margin="20,20,0,20"
                                HorizontalAlignment="Left">
                                <hc:Card>
                                    <Border
                                        Width="Auto"
                                        MaxHeight="350"
                                        Margin="5,10,5,10"
                                        BorderBrush="Black"
                                        BorderThickness="1.5">
                                        <Grid>
                                            <Image Source="{Binding CurrentInfoImage}" Stretch="Uniform" />
                                        </Grid>
                                    </Border>
                                    <hc:Card.Footer>
                                        <TextBlock
                                            Height="Auto"
                                            Margin="10,0,10,14"
                                            VerticalAlignment="Bottom"
                                            FontSize="16"
                                            Foreground="#00311f"
                                            Style="{DynamicResource TextBlockDefault}"
                                            Text="{Binding TextInfoFix}"
                                            TextWrapping="WrapWithOverflow" />
                                    </hc:Card.Footer>
                                </hc:Card>


                            </StackPanel>
                            <StackPanel
                                Width="500"
                                Margin="0,60,20,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                                <Grid Margin="0,0,50,8">
                                    <ContentControl
                                        Width="Auto"
                                        Height="50px"
                                        Content="Внутренние диски SATA отображаются как съемные носители"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}" />
                                    <Button
                                        Width="90"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Command="{Binding FixHardDisksCommand}"
                                        Content="Исправить" />
                                    <Grid
                                        Margin="0,0,-50,0"
                                        styles:MouseEnterCommandBehavior.EnterCommand="{Binding ShowInfoFixHardDisksCommand}"
                                        styles:MouseEnterCommandBehavior.LeaveCommand="{Binding DeleteTextInfoFixCommand}"
                                        Style="{StaticResource HelpMark}" />
                                </Grid>
                                <Grid Margin="0,0,50,8">
                                    <ContentControl
                                        Width="Auto"
                                        Height="50px"
                                        Content="Пропали иконки, остались только имена ярлыков и папок"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}" />
                                    <Button
                                        Width="90"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding FixArrowLabelsCommand}"
                                        Content="Исправить" />
                                    <Grid
                                        Margin="0,0,-50,0"
                                        styles:MouseEnterCommandBehavior.EnterCommand="{Binding ShowInfoFixArrowLabelsCommand}"
                                        styles:MouseEnterCommandBehavior.LeaveCommand="{Binding DeleteTextInfoFixCommand}"
                                        Style="{StaticResource HelpMark}" />
                                </Grid>
                                <Grid Margin="0,0,50,8">
                                    <ContentControl
                                        Width="Auto"
                                        Height="50px"
                                        Content="Восстановить системные файлы"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}" />
                                    <Button
                                        Width="90"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding RestoreSysFilesCommand}"
                                        Content="Восстановить" />
                                    <Grid
                                        Margin="0,0,-50,0"
                                        styles:MouseEnterCommandBehavior.EnterCommand="{Binding ShowInfoRestoreSysFilesCommand}"
                                        styles:MouseEnterCommandBehavior.LeaveCommand="{Binding DeleteTextInfoFixCommand}"
                                        Style="{StaticResource HelpMark}" />
                                </Grid>
                                <Grid Margin="0,0,50,8">
                                    <ContentControl
                                        Width="Auto"
                                        Height="50px"
                                        Content="Переместить appVerif DLL"
                                        Style="{StaticResource ToggleButtonBackgroundStyle}" />
                                    <Button
                                        Width="90"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        Command="{Binding ReplaceAppVerifierDllCommand}"
                                        Content="Переместить" />
                                    <Grid
                                        Margin="0,0,-50,0"
                                        styles:MouseEnterCommandBehavior.EnterCommand="{Binding ShowInfoAppVerifierCommand}"
                                        styles:MouseEnterCommandBehavior.LeaveCommand="{Binding DeleteTextInfoFixCommand}"
                                        Style="{StaticResource HelpMark}" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="Downloads" Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/download.png">
                        <StackPanel
                            Height="166"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Button
                                Width="200"
                                Command="{Binding DownloadOfficeCommand}"
                                Content="Перейти к установке Office" />
                        </StackPanel>
                    </TabItem>
                    <TabItem Tag="pack://application:,,,/Programmka;component/Resources/Images/Icons/cleanup.png">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding UpdateCleanupPageInfoCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Grid>
                            <StackPanel
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <Button
                                    Width="220"
                                    Height="40"
                                    Command="{Binding CleanupTempCommand}"
                                    Content="Очистка временных файлов" />
                                <TextBlock
                                    Margin="40,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="Доступно для очистки - " />
                                <TextBlock
                                    x:Name="TempSizeText"
                                    Width="90"
                                    Height="20"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="{Binding TempSizeText}" />
                            </StackPanel>
                            <StackPanel
                                Width="220"
                                Margin="10,200,0,0"
                                HorizontalAlignment="Left">
                                <Button
                                    Width="210"
                                    Margin="0,0,0,10"
                                    Command="{Binding CheckWinSxSCommand}"
                                    Content="Проверка хранилища WinSxS" />
                                <Button
                                    Width="210"
                                    Command="{Binding CleanupWinSxSCommand}"
                                    Content="Очистка хранилища WinSxS" />
                            </StackPanel>
                            <Border
                                Width="300"
                                Height="200"
                                Margin="260,-60,0,0"
                                HorizontalAlignment="Left"
                                Background="White"
                                BorderBrush="Black"
                                BorderThickness="2">
                                <TextBlock
                                    FontSize="20"
                                    Text="{Binding CleanupInfoText}"
                                    TextWrapping="Wrap" />
                            </Border>
                            <Grid
                                Width="300"
                                Margin="20"
                                HorizontalAlignment="Right">
                                <TextBlock
                                    Margin="0,40,0,0"
                                    FontSize="20"
                                    Foreground="#FFF4FF3A"
                                    Text="Диск С заполнен на:" />
                                <hc:WaveProgressBar
                                    HorizontalAlignment="Right"
                                    FontSize="20"
                                    Foreground="#FFF4FF3A"
                                    Value="{Binding UsedSpaceCDrive}" />
                            </Grid>

                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>