<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol">
    <Style BasedOn="{StaticResource ButtonCustom}" TargetType="Button">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="#302f2c" />
        <Setter Property="hc:BackgroundSwitchElement.MouseHoverBackground" Value="LightGray" />
        <Setter Property="hc:BackgroundSwitchElement.MouseDownBackground" Value="DarkGray" />
        <Setter Property="Height" Value="30" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#efede3" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="hc:BorderElement.CornerRadius" Value="5" />
    </Style>
</ResourceDictionary>